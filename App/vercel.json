{
    "version": 2,
    "builds": [
      {
        "src": "flask_app.py",
        "use": "@vercel/python",
        "config": {
          "pythonVersion": "3.10",
          "buildCommand": "pip install --upgrade pip && pip install -r requirements.txt"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "flask_app.py"
      }
    ]
  }
  